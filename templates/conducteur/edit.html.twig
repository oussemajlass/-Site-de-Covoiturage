{% extends 'base.html.twig' %}

{% block title %}Edit Conducteur{% endblock %}

{% block body %}
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f1f8ff; /* Bleu clair pour l'arrière-plan */
            background-image: url('https://www.dreux-agglomeration.fr/wp-content/uploads/2020/07/covoiturage_%C2%A9Freepik-Fanjianhua.jpg');
            margin: 0;
            padding: 0;
            line-height: 1.6;
        }

        h1 {
            font-size: 32px;
            color: #003366; /* Bleu foncé pour le titre */
            text-align: center;
            margin-top: 40px;
            margin-bottom: 20px;
        }

        .form-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 30px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
        }

        .form-container a {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #007a95;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
            text-align: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s ease, transform 0.2s ease-in-out;
        }

        .form-container a:hover {
            background-color: #004085; /* Bleu plus foncé au survol */
            transform: scale(1.05);
        }

        .form-container a:active {
            transform: scale(1);
        }

        .form-container form {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .form-container input,
        .form-container select,
        .form-container button {
            padding: 12px 15px;
            font-size: 16px;
            border: 1px solid #ddd;
            border-radius: 8px;
            outline: none;
            box-sizing: border-box;
            transition: border-color 0.3s ease;
        }

        .form-container input:focus,
        .form-container select:focus,
        .form-container button:focus {
            border-color: #0056b3; /* Bleu pour le focus */
        }

        .form-container button {
            background-color: #007a95;
            color: white;
            font-weight: bold;
            cursor: pointer;
            border: none;
            transition: background-color 0.3s ease, transform 0.2s ease-in-out;
        }

        .form-container button:hover {
            background-color: #007a95;
            transform: scale(1.05);
        }

        .form-container button:active {
            transform: scale(1);
        }

        .delete-form {
            margin-top: 20px;
            text-align: center;
        }

        .delete-form button {
            padding: 10px 20px;
            background-color: #dc3545; /* Rouge pour le bouton de suppression */
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: bold;
            transition: background-color 0.3s ease, transform 0.2s ease-in-out;
        }

        .delete-form button:hover {
            background-color: #c82333; /* Rouge plus foncé au survol */
            transform: scale(1.05);
        }

        .delete-form button:active {
            transform: scale(1);
        }

        footer {
            text-align: center;
            padding: 20px;
            background-color: #003366; /* Bleu foncé pour le footer */
            color: white;
            margin-top: 40px;
        }
    </style>

    <div class="form-container">
        <h1>Edit Conducteur</h1>

        {# Inclure le formulaire de mise à jour du conducteur #}
        {{ include('conducteur/_form.html.twig', {'button_label': 'Update'}) }}

        <a href="{{ path('app_conducteur_index') }}">Back to list</a>

        {# Formulaire de suppression du conducteur #}
        <div class="delete-form">
            <form method="post" action="{{ path('app_conducteur_delete', {'id': conducteur.id}) }}" onsubmit="return confirmDeletion();">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ conducteur.id) }}">
                <button class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>

    <script>
        // Confirmation JavaScript avant de supprimer
        function confirmDeletion() {
            return confirm('Are you sure you want to delete this item?');
        }
    </script>
{% endblock %}
