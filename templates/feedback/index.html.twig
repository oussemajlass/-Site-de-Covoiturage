{% extends 'base.html.twig' %}

{% block title %}Feedback index{% endblock %}

{% block body %}
    <h1>Feedback index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Emetteur</th>
                <th>Receveur</th>
                <th>Note</th>
                <th>Commentaire</th>
                <th>Datefeedback</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for feedback in feedback %}
            <tr>
                <td>{{ feedback.id }}</td>
                <td>{{ feedback.emetteur }}</td>
                <td>{{ feedback.receveur }}</td>
                <td>{{ feedback.note }}</td>
                <td>{{ feedback.commentaire }}</td>
                <td>{{ feedback.datefeedback ? feedback.datefeedback|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_feedback_show', {'id': feedback.id}) }}">show</a>
                    <a href="{{ path('app_feedback_edit', {'id': feedback.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_feedback_new') }}">Create new</a>
{% endblock %}
