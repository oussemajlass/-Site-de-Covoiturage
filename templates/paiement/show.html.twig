    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ paiement.id }}</td>
            </tr>
            <tr>
                <th>ReservationRef</th>
                <td>{{ paiement.reservationRef }}</td>
            </tr>
